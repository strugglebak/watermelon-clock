.todos-history
  min-height 33em
  .daily-todos:last-child
    margin-bottom 10px
  .daily-todos
    background #FFF
    border 1px solid #DDD
    box-shadow 0 1px 2px 0 rgba(0,0,0,.1)
    padding 1em
    border-radius 3px
    margin-top 10px
    display flex

    .summary
      margin-right 8px
    p
      margin 0
    .year-month-day
      color #222
      font-size 1.0em
    .day
      margin-left 10px
      color #888
      font-size 0.9em
    .finished-todos-count
      color #888
      font-size 0.9em
      margin-top 7.2px

    .todos-list
      flex 1

.tab-pane-page-footer
  display flex
  justify-content space-between
  align-items center
  .total-num-of-todos
    margin 0
    font-size 14px
    color #888
