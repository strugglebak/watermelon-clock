.statistics
  display flex
  justify-content space-between
  align-items center
  border 1px solid #e4e4e4
  border-radius 4px

  li
    flex 1
    border-right 1px solid #e4e4e4
    cursor pointer
    h3, .description
      margin-left 10px
    h3
      margin-top 10px
      font-size 14px
      font-weight 500
      color #666
    .description
      font-size 12px
      color #999

    &:last-child
      border-right none

