.statistics
  display flex
  justify-content space-between
  align-items center
  border 1px solid #e4e4e4
  border-radius 4px
  margin-bottom 0
  li
    flex 1
    border-left 1px solid #e4e4e4
    cursor pointer
    max-width 320px
    max-height 90px
    position relative
    font-weight 500
    text-align left
    &.visible
      background #f4f4f4
    &:first-child
      border-left none
    h3, .description
      margin-bottom 0
    h3
      padding 10px 10px 0
      color #666
      font-size 14px
      line-height 14px
    .description-wrapper
      padding-left 10px
      text-align left
      display inline-flex
      flex-direction column
    .description
      font-size 12px
      color #999
      display inline-block
      line-height 12px
      padding 6px 0 2px
    .number
      display inline-block
      font-size 30px
      color #666
      font-weight 400
      line-height 34px
      padding 2px 0 10px

.history-wrapper
  background #fff
  margin-top 20px
  .monthlyTitle, .watermelonTitle, .todosTitle
    display none
    padding 16px
    border 1px solid #ddd
    border-radius 5px
    box-shadow 0 2px 0 rgba(225,225,225,.2)
  .visible
    display block
