.count-down
  text-align center
  border 1px solid #CCC
  border-radius 4px
  background #F8F8F8
  font-size: 16px
  font-weight: 700
  padding 3px 0
  position relative
  overflow hidden
  height 2em

  .progress
    position absolute
    left 0
    top 0
    height 100%
    z-index 0 
    background-image: linear-gradient(to bottom,#F8F8F8 0,#EEE 100%)
    border-radius 4px 0 0 4px
    border-right 1px solid #e9e9e9
  .time
    position relative
    z-index 1
    cursor default